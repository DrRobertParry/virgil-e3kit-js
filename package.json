{
    "name": "@virgilsecurity/e3kit",
    "version": "0.6.0-beta.1",
    "description": "End-to-end encryption with multiple device support powered by Virgil Security",
    "main": "./dist/node.cjs.js",
    "module": "./dist/node.es.js",
    "browser": {
        "./dist/node.cjs.js": "./browser.cjs.js",
        "./dist/node.es.js": "./browser.es.js",
        "./dist/node.asmjs.cjs.js": "./dist/browser.asmjs.cjs.js",
        "./dist/node.asmjs.es.js": "./dist/browser.asmjs.es.js"
    },
    "typings": "./dist/types/index.d.ts",
    "files": [
        "dist",
        "native.js",
        "worker.js",
        "browser.cjs.js",
        "browser.es.js"
    ],
    "repository": "https://github.com/VirgilSecurity/virgil-e3kit-js",
    "author": "Virgil Security Inc. <support@virgilsecurity.com>",
    "license": "BSD-3-Clause",
    "scripts": {
        "build": "node --max-old-space-size=4096 node_modules/.bin/rollup -c rollup.config.js",
        "clean": "rimraf .rpt2_cache .virgil_key_entries coverage dist",
        "debug:test": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "lint": "tslint --project tsconfig.json",
        "prepare": "npm run clean && npm run build",
        "prettier": "prettier 'src/**/*.ts' --write",
        "precommit": "lint-staged",
        "test:node": "mocha -t 0 -r dotenv/config -r ts-node/register src/__tests__/EThree.test.ts",
        "test:browser": "karma start",
        "test": "npm run test:node && npm run test:browser",
        "docs": "typedoc src && npm run build && copy example/*.html docs"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "tslint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "@virgilsecurity/base-crypto": "^0.4.5",
        "@virgilsecurity/core-foundation": "^0.1.1",
        "@virgilsecurity/crypto-types": "^0.1.3",
        "@virgilsecurity/keyknox": "next",
        "@virgilsecurity/pythia-crypto": "^0.1.1",
        "@virgilsecurity/sdk-crypto": "^0.4.4",
        "virgil-pythia": "next",
        "virgil-sdk": "next"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/uuid": "^3.4.4",
        "@virgilsecurity/key-storage-rn": "next",
        "abort-controller": "^3.0.0",
        "builtin-modules": "^3.1.0",
        "copy": "^0.3.2",
        "cross-env": "^5.2.0",
        "dotenv": "^6.0.0",
        "es6-symbol": "^3.1.1",
        "expect": "^24.0.0",
        "husky": "^0.14.3",
        "is-buffer": "^2.0.3",
        "karma": "^4.0.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-mocha": "^1.3.0",
        "karma-rollup-preprocessor": "^7.0.0",
        "karma-spec-reporter": "0.0.32",
        "lint-staged": "^7.2.2",
        "mocha": "^5.2.0",
        "prettier": "^1.14.2",
        "react-native-virgil-crypto": "^0.3.0",
        "rimraf": "^2.6.2",
        "rollup": "^1.15.1",
        "rollup-plugin-commonjs": "^10.0.0",
        "rollup-plugin-copy": "^3.1.0",
        "rollup-plugin-ignore-import": "^1.3.0",
        "rollup-plugin-node-resolve": "^5.2.0",
        "rollup-plugin-re": "^1.0.7",
        "rollup-plugin-replace": "^2.2.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-terser": "^5.1.1",
        "rollup-plugin-typescript2": "^0.21.1",
        "rollup-plugin-wasm": "^3.0.0",
        "source-map-explorer": "^1.6.0",
        "ts-node": "^8.3.0",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.9.2",
        "tslint-config-prettier": "^1.14.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typedoc": "^0.15.0",
        "typedoc-plugin-markdown": "^1.1.27",
        "typescript": "^3.5.1",
        "uuid": "^3.3.2"
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    }
}
