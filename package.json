{
    "name": "@virgilsecurity/e3kit",
    "version": "0.3.8",
    "description": "End-to-end encryption with multiple device support powered by Virgil Security",
    "main": "./dist/e3kit.browser.es.js",
    "module": "./dist/e3kit.browser.es.js",
    "typings": "./dist/types/index.d.ts",
    "files": [
        "dist"
    ],
    "repository": "https://github.com/VirgilSecurity/virgil-e3kit-js",
    "author": "Virgil Security Inc. <support@virgilsecurity.com>",
    "license": "BSD-3-Clause",
    "scripts": {
        "build:browser:umd": "cross-env NODE_ENV=production rollup -c config/rollup.config.umd.js",
        "build:browser:es": "cross-env NODE_ENV=production rollup -c config/rollup.config.es.js",
        "build": "npm run build:browser:umd && npm run build:browser:es",
        "clean": "rimraf .rpt2_cache .virgil_key_entries coverage dist",
        "debug:test": "node --inspect-brk node_modules/.bin/jest --runInBand",
        "lint": "tslint --project tsconfig.json",
        "prepare": "npm run clean && npm run build",
        "prettier": "prettier 'src/**/*.ts' --write",
        "precommit": "lint-staged",
        "test": "karma start",
        "docs": "typedoc src"
    },
    "lint-staged": {
        "src/**/*.ts": [
            "tslint --fix",
            "git add"
        ]
    },
    "dependencies": {
        "@virgilsecurity/keyknox": "^0.2.4",
        "virgil-crypto": "^3.2.2",
        "virgil-pythia": "^0.2.3",
        "virgil-sdk": "^5.2.2"
    },
    "peerDependencies": {},
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "cross-env": "^5.2.0",
        "dotenv": "^6.0.0",
        "es6-symbol": "^3.1.1",
        "expect": "^24.0.0",
        "husky": "^0.14.3",
        "karma": "^4.0.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-mocha": "^1.3.0",
        "karma-rollup-preprocessor": "^6.1.2",
        "karma-spec-reporter": "0.0.32",
        "lint-staged": "^7.2.2",
        "mocha": "^5.2.0",
        "prettier": "^1.14.2",
        "rimraf": "^2.6.2",
        "rollup": "^0.64.1",
        "rollup-plugin-analyzer": "^3.0.0",
        "rollup-plugin-commonjs": "^9.1.5",
        "rollup-plugin-inject": "^2.2.0",
        "rollup-plugin-node-globals": "^1.2.1",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-replace": "^2.1.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "rollup-plugin-typescript2": "^0.20.1",
        "rollup-plugin-uglify": "^4.0.0",
        "source-map-explorer": "^1.6.0",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.9.2",
        "tslint-config-prettier": "^1.14.0",
        "tslint-plugin-prettier": "^1.3.0",
        "typedoc": "^0.14.2",
        "typedoc-plugin-markdown": "^1.1.27",
        "typescript": "^3.0.1"
    },
    "sideEffects": false
}
